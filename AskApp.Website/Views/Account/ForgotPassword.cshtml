@model AskApp.Website.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Forgot your password?";
}
<div class="login-box">
    <div class="login-logo">
        <a href="/eAsk">e<b>ASK</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Fill your registered email address to reset your forgotten password</p>
        <p>  </p>
        <p>  </p>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="E-mail" name="email">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
                <div class="row">
                    <div class="col-xs-8">
                        <input type="submit" class="btn btn-default" value="Email Link" />
                    </div>
                </div>
        }
    </div>
    <!-- /.login-box-body -->
</div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


